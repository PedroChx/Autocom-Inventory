---
const user = Astro.locals.user;
import Layout from "../layouts/Layout.astro";
import Label from "../components/Label.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Index</title>
  </head>
  <body>
    {
      user ? (
        <div class="flex flex-col gap-2">
          <form method="POST" action="/api/signout">
            <button class="underline">Sign out</button>
          </form>
          <a class="underline" href="/seller">
            {" "}
            Go to the admin page
          </a>
        </div>
      ) : (
        <main>
          <Layout title="Autocom">
            <Label />
          </Layout>
          <h3 class="title">Explora nuestro catalogo de autos.</h3>
          <h4 class="description">
            Reserva y consulta los detalles de los autos que tenemos para ti.
          </h4>
        </main>
      )
    }
  </body>
  <footer>
    <a href="/catalogue" class="access"> Acceder al Cat√°logo </a>
    <a href="/signin" class="sign"> Accede como vendedor </a>
  </footer>
</html>

<style>
  html {
    background-image: url("../img/cover.jpg");
    background-repeat: no-repeat;
    background-size: 100%;
    width: 100%;
    height: 100%;
  }

  main {
    margin: auto;
    padding: 1rem;
    max-width: calc(100% - 2rem);
    color: rgb(255, 255, 255);
    font-size: 20px;
    line-height: 1.6;
  }

  footer {
    position: absolute;
    top: 85%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    margin: 0 2rem;
    width: 35%;
  }
  .access {
    color: white;
    padding: 1rem;
    margin: auto;
    font-weight: bold;
    background-color: #c20f2f;
    border-radius: 0.5rem;
    transition: all 0.3s ease; 
  }

  .access:hover {
    background-color: #e51935; 
    transform: scale(1.05);
  }

  .sign {
    color: white;
    padding: 1rem;
    margin: auto;
    font-weight: bold;
    border-radius: 0.5rem;
    transition: all 0.3s ease; 
  }

  .sign:hover{
    background-color: rgba(0, 0, 0, 0.539);
    transform: scale(1.05);
  }

  .underline {
    color: azure;
  }

  .title {
    font-family: "Libre Baskerville", serif;
    font-weight: 400;
    font-style: normal;
    font-size: 5rem;
    padding: 1rem;
  }

  .description {
    padding: 1rem;
  }
</style>
